{% extends 'gdPublic/partial/gpBase.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block main %}

    <section class="security">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger msgerreur">Erreur de nom ou de mot de passe</div>
            {% endif %}
            {% if error1 %}
                <div class="alert alert-danger msgerreur">Accès refusé. Merci de contacter un administrateur.</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes déjà identifié :  {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}


            {% if error1 is null %}
                <h1 class="h3 mb-3 font-weight-normal">Espace réservé aux bénévoles de l'association - Merci de vous identifier</h1>
                <div class="formlog">
                    <div class="form-formelt">
                    <label for="username">Nom utilisateur </label>
                    <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                </div>
                <div class="form-formelt">
                    <label for="password">Mot de passe </label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                </div>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                >
                </div>

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Remember me</label>
                    </div>
                #}

                <button class="btn btn-lg btn-primary formelt submit-button" type="submit">
                    Valider
                </button>
            {% endif %}
        </form>
    </section>
{% endblock %}
