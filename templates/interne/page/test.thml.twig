<h1>Recherche de Bénéficiaires</h1>

{{ form_start(form) }}
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom) }}
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.prenom) }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.prenom) }}
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.telephone) }}
                {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.telephone) }}
            </div>
        </div>
    </div>

    <div class="form-group text-center">
        {{ form_widget(form.rechercher, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>
</div>
{{ form_end(form) }}

    {% if beneficiaires is not empty %}
        <h2>Résultats de la Recherche</h2>
        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Téléphone</th>
                <th>Email</th>
                <th>Profession</th>
            </tr>
            </thead>
            <tbody>
            {% for beneficiaire in beneficiaires %}
                <tr>
                    <td>{{ beneficiaire.nom_beneficiaire }}</td>
                    <td>{{ beneficiaire.prenom_beneficiaire }}</td>
                    <td>{{ beneficiaire.telephone_beneficiaire }}</td>
                    <td>{{ beneficiaire.mail_beneficiaire }}</td>
                    <td>{{ beneficiaire.profession_beneficiaire }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun bénéficiaire trouvé.</p>
    {% endif %}