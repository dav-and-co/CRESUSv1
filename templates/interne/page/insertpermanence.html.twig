{% extends 'interne/partial/intBase.html.twig' %}

{% block metatitle %}
    - insert permanence
{% endblock %}


{% block main %}

    <div class="container">
        <h1 class="text-center my-4">Cr√©er/Modifier une Permanence</h1>

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">{{ form_label(form.dateAt) }}</label>
            <div class="col-sm-10">
                {{ form_widget(form.dateAt, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateAt) }}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">{{ form_label(form.heureAt) }}</label>
            <div class="col-sm-10">
                {{ form_widget(form.heureAt, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.heureAt) }}
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">{{ form_label(form.heureEnd) }}</label>
            <div class="col-sm-10">
                {{ form_widget(form.heureEnd, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.heureEnd) }}
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Sauvegarder</button>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}